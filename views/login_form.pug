extends layout

block content
    div(class="container py-4 my-4" style="border-radius: 8px; background-color: #396AC3")
        form(action="/login/login" method="post" class="requires-validation" novalidate)
            div(class="row")
                div(class="col-md")
                    #review_header
                        h1 Login
                        hr
            div(class="row g-3 mx-1")
                div(class="col-md-12")
                    label(for='username' class='form-label text-white') Username
                    input(type="text", name="username" id="username" class="form-control form-control-lg" required)
                    div(class="valid-feedback")
                        h6 <strong>Username looks good!</strong>
                    div(class="invalid-feedback")
                        h6 <strong>Username is required!</strong>
                div(class="col-md-12")
                    label(for="password" class='form-label text-white') Password
                    input(type="password", name="password" required class="form-control form-control-lg")
                    div(class="valid-feedback")
                        h6 <strong>Password looks good!</strong>
                    div(class="invalid-feedback")
                        h6 <strong>Password is required!</strong>
                div(class="col-6")
                    input(class='btn btn-lg' style="background-color: white; color: #396AC3;" type="submit" value="Submit")
