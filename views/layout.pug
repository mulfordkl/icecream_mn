doctype html
html
  head
    title="Ice Cream MN"
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js")
    script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.js" integrity="sha256-T0Vest3yCU7pafRw9r+settMBX6JkKN06dqBnpQ8d30=" crossorigin="anonymous")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    script(src='/javascripts/utils.js')
  body

    nav(class="navbar navbar-expand-md navbar-dark static-top flex-column")
      a(class="navbar-brand mx-auto" id="logo_img_container" href="/")
        img(class="img-fluid" id="img-responsive" src="/images/logo.png" alt = 'Logo, Ice Cream Minnsota with cone' )

      ul(class="navbar-nav mx-auto nav-justify text-center")
        li(class="nav-item")
          a(class='nav-link header_buttons' href='/shops') Add Shop
        li(class="nav-item")
          a(class='nav-link header_buttons' href='/reviews') Add Review
        li(class="nav-item")
          a(class='nav-link header_buttons' href='/reviews/get_all_reviews') View Reviews
        if (user)
          li(class="nav-item")
            a(class='nav-link header_buttons' href='/login/logout') Logout
        else
          li(class="nav-item")
            a(class='nav-link header_buttons' href='/login') Login
    
    each warning in warnings 
        div(class='header alert alert-danger alert-dismissible')
            <strong><i class="fa fa-check-circle"></i> Error:</strong> #{warning}
            a(href="#" class='close' data-dismiss="alert" aria-label="close") 
            i(class='fa fa-times')
    block content

    footer(class="text-center")
      p Author: Kellen Mulford 
        a(href="mailto:mulfordkl@gmail.com") Contact
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
    
  script.
      (function () {
      'use strict'
          const forms = document.querySelectorAll('.requires-validation')
          Array.from(forms)
              .forEach(function (form) {
                  form.addEventListener('submit', function (event) {
                      if (!form.checkValidity()) {
                          event.preventDefault()
                          event.stopPropagation()
                      }

                      form.classList.add('was-validated')
                  }, false)
              })
      })()

  script.
    $(document).ready(function() {
      $(window).on("scroll", function() {
        if ($(window).scrollTop() >= 30) {
          $(".navbar").addClass("compressed");
        } else {
          $(".navbar").removeClass("compressed");
        }
      });
    });    
